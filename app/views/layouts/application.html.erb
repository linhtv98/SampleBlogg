<!DOCTYPE html>
<html>
  <head>
    <title>SampleBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="sidebar">
      <!-- <div id="logo">
        <%= link_to root_path do %>
          <%= image_tag ("avt.jpg") %>
        <% end %>
      </div> -->
      <div id="brand-logo"><%= link_to "SAMPLEBLOG", root_path %></div>
      <ul>
        <li class="category">Website</li>
        <li><%= link_to "Blog", root_path %></li>
        <li><%= link_to "About", about_path %></li>
      </ul>
      <ul>
        <li class="category">Contact</li>
        <li><%= link_to "FaceBook", "https://www.facebook.com/linhtran0198" %></li>
        <li><%= link_to "Instagram", "https://www.instagram.com/_tvlinh2401/?hl=vi" %></li>
        <li><%= link_to "Twitter", "https://twitter.com/jiyeon275523575" %></li>
      </ul>
      <% if !user_signed_in? %>
      <p class="sign_in">Admin Login</p>
      <% end %>
    </div>
    <div id="main_content">
      <div id="header">
        <% if current_page?(root_path) %>
          <p>All Posts</p>
        <% elsif current_page?(about_path) %>
          <p>About</p>
        <% else %>
          <%= link_to "Back to All posts", root_path  %>
        <% end %>
        <% if user_signed_in? %>
        <div class="buttons">
          <button class="button"><%= link_to "New Post", new_post_path %></button>
          <button class="button">Log Out </button>
        </div>
      </div>
      <% end %>

      <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert") %>
      <% end %>
       <%= yield %>
    </div>
   
  </body>
</html>
